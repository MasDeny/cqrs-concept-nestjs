{
  "settings": {
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "post_content_analyzer": {
          "type": "custom",
          "char_filter": [
            "html_strip"
          ],
          "tokenizer": "nori_mixed",
          "filter": [
            "lowercase",
            "nori_part_of_speech",
            "unique",
            "synonyms_koding"
          ]
        }
      },
      "filter": {
        "synonyms_koding": {
          "type": "synonym",
          "synonyms_path": "synonyms-koding.txt"
        }
      },
      "tokenizer": {
        "nori_mixed": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed",
          "user_dictionary": "user-dictionary.txt"
        }
      },
      "char_filter": {
        "programming_language_filtter": {
          "type": "mapping",
          "mappings": [
            "+ => _plus_",
            "# => _sharp_"
          ]
        }
      },
      "normalizer": {
        "post_tag_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "post_content_analyzer"
      },
      "boardType": {
        "type": "keyword"
      },
      "htmlContent": {
        "type": "text",
        "analyzer": "post_content_analyzer"
      },
      "tags": {
        "type": "keyword",
        "boost": 2,
        "normalizer": "post_tag_normalizer"
      },
      "imageUrls": {
        "type": "text",
        "index": false,
        "doc_values": false
      },
      "createdAt": {
        "type": "date"
      },
      "writerNickname": {
        "type": "keyword"
      },
      "readCount": {
        "type": "integer"
      },
      "likeCount": {
        "type": "integer"
      },
      "commentCount": {
        "type": "integer"
      },
      "scrapCount": {
        "type": "integer"
      }
    }
  }
}